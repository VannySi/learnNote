/**index.wxss**/
page{
  height: 100%;
}

.container {
  padding-top: 40rpx;
  padding-bottom: 0;
  background-color: #f5f5f5;
}

.image-upload{
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
}

.flex-row{
  padding: 20rpx 5%;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.flex-row .picker picker{
  margin-left: 10rpx;
  display: inline-block;
}

.flex-row input{
  text-align: right;
}

.image-compress{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
  width: 90%;
  height: 280rpx;
  margin:  40rpx 0;
  padding: 30rpx 5%;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.image-compress view{
  width: 150rpx;
  height: 150rpx;
  margin-right: 25rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.image-compress view:nth-child(4n){
  margin-right: 0;
}

.image-compress image{
  width: 100%;
  height: 100%;
}

.image-compress .uploadImage{
  width: 148rpx;
  height: 150rpx;
  font-size: 300%;
  text-align: center;
  line-height: 150rpx;
  border: 1px dashed #ccc;
}